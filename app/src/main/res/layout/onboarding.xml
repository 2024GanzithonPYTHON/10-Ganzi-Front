<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/onboarding_text1"
        android:layout_width="287dp"
        android:layout_height="79dp"
        android:src="@drawable/onboarding_text1" />

    <ImageView
        android:id="@+id/onboarding_text2"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:src="@drawable/onboarding_text2" />

    <ImageView
        android:id="@+id/onboardingImage"
        android:layout_width="286dp"
        android:layout_height="505dp"
        android:src="@drawable/onboarding_poster" />
</LinearLayout>
